<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpenWebActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_first"
            style="@style/MontserratRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/tx_web_screen"
            android:textSize="24sp"
            android:lines="3"
            android:lineHeight="31dp"

            />

        <ImageView
            android:id="@+id/iv_pc_phone"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/tv_first"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_pc_phone" />


        <TextView
            android:id="@+id/tv_fourth"
            style="@style/SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_pc_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Para ello, sÃ³lo debes"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/tv_fifth"
            style="@style/SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fourth"
            android:layout_centerHorizontal="true"
            android:text="tener tu tienda"
            android:fontFamily="@font/product_thin"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/tv_sixth"
            style="@style/SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fifth"
            android:layout_centerHorizontal="true"
            android:text="configurada y hacer click"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/tv_seventh"
            style="@style/SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sixth"
            android:layout_centerHorizontal="true"
            android:text="en el siguiente link:"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textSize="24sp"/>


        <ImageView
            android:id="@+id/iv_web_link"
            android:layout_width="300dp"
            android:layout_height="43dp"
            android:layout_below="@id/tv_seventh"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_web_link"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>