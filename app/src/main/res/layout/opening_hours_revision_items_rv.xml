<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="3dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/close_no_active_cv"
        android:layout_width="276dp"
        android:visibility="visible"
        android:layout_height="30dp"
        android:layout_marginStart="0dp"
        android:foreground="#3B717171"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/rv_opening_hours_revision_inactive_day_tv"
            style="@style/Medium"
            android:layout_width="113dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:text="Miercoles"
            android:textColor="@color/grey_ui"
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/close_no_active_tv"
            android:layout_width="113dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="end"
            android:text="cerrado / no activo"
            android:textColor="@color/grey_ui"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:id="@+id/openHours_constraint_layout"
        android:layout_width="277dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/rv_opening_hours_revision_active_day_tv"
            style="@style/Medium"
            android:layout_width="113dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:text="Miercoles"
            android:textColor="@color/grey_ui"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="DuplicateIds" />

        <androidx.cardview.widget.CardView
            android:id="@+id/openHourCv"
            android:layout_width="76dp"
            android:layout_height="36dp"
            android:layout_marginTop="2.0dp"
            android:foreground="@drawable/border_cv_opening_hours"
            app:cardCornerRadius="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rv_opening_hours_revision_active_day_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/openHour_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="10:00"
                android:textColor="@color/grey_ui"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/closeHourCv"
            android:layout_width="76dp"
            android:layout_height="36dp"
            android:layout_marginTop="2.0dp"
            android:foreground="@drawable/border_cv_opening_hours"
            app:cardCornerRadius="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.833"
            app:layout_constraintStart_toEndOf="@+id/openHourCv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/closeHour_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="22:00"
                android:textColor="@color/grey_ui"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


