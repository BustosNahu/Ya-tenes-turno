<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/popup_layout"
    android:background="#86000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal|center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="331dp"
        android:layout_gravity="center"
        android:layout_height="465dp">

        <androidx.cardview.widget.CardView
            android:layout_marginStart="10dp"
            android:layout_width="311dp"
            android:layout_height="440dp"
            android:layout_marginTop="20dp"
            android:padding="1dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/popUp_title"
                    style="@style/NormalBold"
                    android:layout_width="279dp"
                    android:layout_height="105dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center_horizontal"
                    android:lineHeight="30dp"
                    android:lineSpacingExtra="-15sp"
                    android:text="@string/felicidades"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp" />

                <TextView
                    style="@style/NormalBold"
                    android:layout_width="279dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center_horizontal"
                    android:lineHeight="30dp"
                    android:lineSpacingExtra="-15sp"
                    android:text="@string/tienda_creada_exitosamente"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/popUp_image"
                    android:layout_width="270dp"
                    android:layout_height="215dp"
                    android:layout_below="@+id/popUp_title"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/create_place_finish" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/finish_place_creation"
                    style="@style/Normal"
                    android:layout_width="279dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/popUp_image"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/border_outline_rounded_primary"
                    android:clickable="true"
                    android:elevation="20dp"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_horizontal"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="10dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:drawablePadding="3dp"
                        android:drawableTint="@color/white"
                        android:gravity="center"
                        android:letterSpacing="0.03"
                        android:text="@string/finalizar_tienda_popup"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />

                </androidx.cardview.widget.CardView>



            </RelativeLayout>

        </androidx.cardview.widget.CardView>




    </RelativeLayout>

</LinearLayout>

