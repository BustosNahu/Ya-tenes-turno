<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/new_place_step_3_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.place_register.step3.NewPlaceStep3">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059">


        <RelativeLayout
            android:id="@+id/topBar_LL_new_place"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#F4F4F4"
            android:padding="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/topBar_RL_new_place"
                android:layout_width="314dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp">

                <ImageButton
                    android:id="@+id/back_btn_new_place_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:src="@drawable/bakc_arrow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.044"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/step_title_new_place_a"
                    style="@style/Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/back_btn_new_place_a"
                    android:gravity="center"
                    android:text="@string/paso_03"
                    android:textAlignment="center"
                    android:textColor="@color/grey_ui"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="137dp"
                    android:layout_toEndOf="@+id/step_title_new_place_a"
                    android:src="@drawable/ic_third_step_pb" />


            </RelativeLayout>

            <TextView
                style="@style/Medium"
                android:layout_width="272dp"
                android:layout_height="60dp"
                android:layout_below="@+id/topBar_RL_new_place"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/new_place_step1_title"
                android:textColor="@color/grey_ui"
                android:textSize="24sp" />


        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="140dp"
            android:padding="14dp"
            android:background="@drawable/new_place_intro_frame"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/topBar_LL_new_place">

            <TextView
                android:id="@+id/textView"
                style="@style/NormalBold"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/new_place_intro_step3_description"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/whMainCardVIew"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:layout_marginTop="48dp"

                app:cardCornerRadius="12dp"
                app:cardElevation="10dp"
                android:foreground="@drawable/border_outline_work_here_cv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" >

                <ImageView
                    android:id="@+id/workHereStep3_btn"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:contentDescription="TODO" />
                
                <TextView
                    android:id="@+id/whText1"
                    style="@style/Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_margin="12dp"
                    android:text="@string/new_placeo_step3_first_cv"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/whText2"
                    style="@style/Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginTop="33dp"
                    android:layout_marginStart="12dp"
                    android:text="@string/new_placeo_step3_first_2_cv"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/whText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginTop="65dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/new_placeo_step3_first_3_cv"
                    android:textAlignment="viewStart"
                    android:textColor="@color/grey_ui"
                    android:textSize="15sp"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView

                android:id="@+id/dwhMainCardVIew"
                android:layout_width="330dp"
                android:layout_height="170dp"

                android:layout_marginTop="198dp"
                android:foreground="@drawable/border_outline_work_here_cv"
                app:cardCornerRadius="12dp"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <ImageView
                    android:id="@+id/dwhMainImgView"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/dwhText1"
                    style="@style/Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:gravity="start"
                    android:text="@string/new_placeo_step3_second_cv"
                    android:textAlignment="viewStart"
                    android:textColor="#B2FF8672"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/dwhText2"
                    style="@style/Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="33dp"
                    android:gravity="start"
                    android:text="@string/new_placeo_step3_second_2_cv"
                    android:textAlignment="viewStart"
                    android:textColor="#B2FF8672"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/dwhText3"
                    style="@style/Thin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="65dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="start"
                    android:text="@string/new_placeo_step3_second_3_cv"
                    android:textAlignment="viewStart"
                    android:textColor="#5E5E5E"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/dwhText4"
                    style="@style/Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="102dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="start"
                    android:text="@string/new_placeo_step3_second_4_cv"
                    android:textAlignment="viewStart"
                    android:textColor="@color/grey_ui"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/dwhText5"
                    style="@style/Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="137dp"
                    android:gravity="start"
                    android:text="@string/saber_mas"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnStep2_confirmScheduletHours"
                android:layout_width="277dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border_outline_rounded_primary"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#B8B5B5"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dwhMainCardVIew">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="11dp"
                    android:drawablePadding="3dp"
                    android:drawableTint="@color/white"
                    android:gravity="center"
                    android:letterSpacing="0.03"
                    android:text="@string/create_my_space"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>