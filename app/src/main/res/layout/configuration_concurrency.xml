<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="100dp">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/infoConcurrency"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_outline_info_24" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelPrice"
        style="@style/ServiceConfigLabel"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/infoConcurrency"
        android:text="@string/info_how_many_clients" />

    <LinearLayout
        android:id="@+id/concurrencyPicker"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/labelPrice"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:orientation="horizontal" />

</RelativeLayout>