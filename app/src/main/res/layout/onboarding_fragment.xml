<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.onboarding.OnboardingFragment"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboarding_fragment_container">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_onboarding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="OMITIR"

            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageReplaceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:src="@drawable/ic_baseline_arrow_back_ios"
            android:backgroundTint="@color/transparent"
            android:visibility="gone"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/layoutOnboardingIndicators"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="15dp"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/imageButtonOnboardingSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:paddingStart="40dp"
            android:visibility="visible"
            android:src="@drawable/ic_forward_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/layoutOnboardingIndicators"
            app:layout_constraintStart_toEndOf="@+id/layoutOnboardingIndicators"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="imageButtonOnboardingSkip" />

        <TextView
            android:id="@+id/txt_finished_onboarding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:textSize="16dp"
            android:paddingEnd="10dp"
            android:visibility="gone"
            android:text="HECHO"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/layoutOnboardingIndicators"
            app:layout_constraintStart_toEndOf="@+id/layoutOnboardingIndicators"
            app:layout_constraintTop_toTopOf="parent"
       />




    </androidx.constraintlayout.widget.ConstraintLayout>








</FrameLayout>