<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.web_view.OpenWebActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/monserrat_medium"
            android:text="Ahora, puedes controlar"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_first"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/monserrat_medium"
            android:text="tu tienda y sus funciones"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_second"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/monserrat_medium"
            android:text="desde tu PC o tu iphone"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/iv_pc_phone"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/tv_third"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:src="@drawable/ic_pc_phone" />


        <TextView
            android:id="@+id/tv_fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_pc_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Para ello, sÃ³lo debes"
            android:fontFamily="@font/monserrat_bold"
            android:textStyle="bold"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/tv_fifth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fourth"
            android:layout_centerHorizontal="true"
            android:text="tener tu tienda"
            android:fontFamily="@font/monserrat_bold"
            android:textStyle="bold"

            android:textSize="22sp"/>

        <TextView
            android:id="@+id/tv_sixth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fifth"
            android:layout_centerHorizontal="true"
            android:text="configurada y hacer click"
            android:fontFamily="@font/monserrat_bold"
            android:textStyle="bold"

            android:textSize="22sp"/>

        <TextView
            android:id="@+id/tv_seventh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sixth"
            android:layout_centerHorizontal="true"
            android:text="en el siguiente link:"
            android:fontFamily="@font/monserrat_bold"
            android:textStyle="bold"
            android:textSize="22sp"/>


        <ImageView
            android:id="@+id/iv_web_link"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_seventh"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_web_link"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_below="@id/iv_web_link"
            android:text="www.yatenesturno.com.ar/my-commerce"
            android:layout_centerHorizontal="true"
            android:textColor="@color/darker_grey"
            android:textSize="10sp"/>




    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>